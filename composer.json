{
    "name": "bugbuster/contao-reveal-js-theme",
    "type": "contao-module",
    "description": "reveal-js basic template for the Contao Open Source CMS",
    "keywords": [
        "contao",
        "theme",
        "reveal.js"
    ],
    "license": "LGPLv3",
    "authors": [
		{
			"name":"Glen Langer",
			"homepage":"http://contao.ninja",
			"role":"Developer"
		},
        {
            "name": "Tristan Lins",
            "homepage": "http://bit3.de",
            "role": "Developer"
        }
    ],
    "require": {
        "php":">=5.4",
        "contao/core":">=3.5.1,<4",
        "contao-community-alliance/composer-plugin": "~2.4",
        "contao-community-alliance/meta-palettes": "~1.9"
    },
    "autoload": {
        "psr-4": {
            "Bit3\\Contao\\Theme\\RevealJs\\Basic\\": "src/"
        }
    },
    "conflict": {
        "bit3/contao-theme-reveal-js-basic":"*",
        "bugbuster/contao-reveal-js-theme":"0.1.*"
	},
    "extra": {
        "contao": {
            "sources": {
                "module": "system/modules/reveal-js",
                "assets/reveal-js": "assets/reveal-js"
            },
			"transifex": {
				"project": "contao-reveal-js-theme",
				"prefix": "master-",
				"languages_cto": "module/languages",
				"languages_tx": ".tx"
			}
        },
        "branch-alias": {
            "dev-develop": "1.0.x-dev"
        }
    }
}
